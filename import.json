    if found:
        entry = found[0]
        st.write(f"ğŸ‡ªğŸ‡¸ Spaans: {entry['spanish']}")
        st.write(f"ğŸ‡¿ğŸ‡¦ Afrikaans: {', '.join(entry['afrikaans'])}")
